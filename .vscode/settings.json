{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  "files.exclude": {
    ".envrc": true,
    ".python-version": true,
    ".venv": true,
    ".vscode": true,
    "**/__pycache__": true,
    "**/.aider.*": true,
    "pyproject.toml": true,
    "uv.lock": true
  }
}
